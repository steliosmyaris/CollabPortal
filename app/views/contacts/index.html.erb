<h1>My Contacts</h1>

<% if @contacts.empty? %>
  <p>You have no contacts yet. Browse posts and add some!</p>
<% else %>
  <% @contacts.each do |contact| %>
    <div style="border: 1px solid #ccc; padding: 10px; margin: 10px 0;">
      <p><strong><%= contact.contact.email %></strong></p>
      <%= link_to "Send Message", messages_path(receiver_id: contact.contact.id) %> |
      <%= link_to "Remove", contact, data: { turbo_method: :delete, turbo_confirm: "Remove this contact?" } %>
    </div>
  <% end %>
<% end %>

<%= link_to "Browse Posts", posts_path %>